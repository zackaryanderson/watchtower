{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "outDir": "./lib",
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*",
    "./types/**/*"
  ]
}